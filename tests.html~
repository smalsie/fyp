		<script src="http://code.jquery.com/qunit/qunit-1.17.1.js"></script>
		<script type="text/javascript" src="libs/phaser.js"></script>
		<script type="text/javascript" src="libs/Game.class.js"></script>	
		<script type="text/javascript" src="libs/Key.class.js"></script>
		<script type="text/javascript" src="libs/Keys.class.js"></script>
		<script type="text/javascript" src="libs/Player.class.js"></script>
		<script type="text/javascript" src="js/tutorial1mine.js"></script>

		<script>
		
			QUnit.test( "QUnit test", function( assert ) {
				assert.ok( 1 == "1", "Passed!" );
			});
			
			QUnit.test( "Name", function( assert ) {
				assert.ok( game.getName() == document.title, "Passed!" );
			});
			
			QUnit.test( "Game Type Test", function( assert ) {
				assert.ok( game.world instanceof Phaser.Game, "Passed!" );
			});
			
			QUnit.test( "World size", function( assert ) {
				assert.ok( ((game.gameHeight() == 300) && (game.gameWidth() == 400)), "Passed!" );
			});
			
			QUnit.test( "Player Image", function( assert ) {
				assert.ok( player.playerImage == "img/mario-sprite.png", "Passed!" );
			});
			
			QUnit.test( "Player Set X", function( assert ) {
			
				player.setX(205);
				assert.ok( player.getX() == 205, "Passed!" );
				
			});
			
			QUnit.test( "Player Set Y", function( assert ) {
				
				player.setY(205);
				assert.ok( player.getY() == 205, "Passed!" );
				
			});
			
			QUnit.test( "Player Move X", function( assert ) {
				
				var x = player.getX();
				var a = 0;
				var mv = 2;
				var num = 0
				
				for(var i = 0; i < 10; i++) {
				
					player.moveX(mv);
					num += mv;
				
				}
				
				assert.ok( player.getX() == x  , "Passed!" );
				
			});
			
			QUnit.test( "Player Move Y", function( assert ) {
				assert.ok( false, "Passed!" );
			});
		
		</script>
